doctype html 
html
    head 
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width", initial-scale="1")
        script(src="https://kit.fontawesome.com/8030caa762.js" crossorigin="anonymous")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        link(href="styles/home.css" rel="stylesheet" type="text/css")
        script(src="js/dropzone.js")
        script(src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js")
        link(rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css")
        link(href="styles/global.css" rel="stylesheet" type="text/css")
        title Upload
        unless session.toast == false
            script(src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous")
            script(src="js/toast/jquery.toast.min.js")
            link(href="js/toast/jquery.toast.min.css" rel="stylesheet")
    - var theme = 'theme-' + session.theme
    body(class=theme)
        nav(class="navbar navbar-expand-lg navbar-dark bg-dark px-2")
            a(href="/home" class="navbar-brand") #{config['settings']['name']}  
            ul(class="navbar-nav")
                li(class="nav-item")
                    a(class="nav-link" href="/home") Home 
                li(class="nav-item")
                    a(class="nav-link active" href="/upload") Upload
                li(class="nav-item")
                    a(class="nav-link" href="/paste") Paste
                li(class="nav-item")
                    a(class="nav-link" href="/gallery") Gallery
                li(class="nav-item")
                    a(class="nav-link" href="/account") Account
                li(class="nav-item")
                    a(class="nav-link" href="/settings") Settings
            ul(class="navbar-nav ms-auto")
                li(class="nav-item")
                    a(class="nav-link" href="/api/theme")
                        if session.theme == 'dark'
                            i(class="fas fa-sun")
                        else
                            i(class="fas fa-moon")
                li(class="nav-item")
                    a(class="nav-link" href="/logout") Sign out
        div(class="container")
            div(class="card mt-5 bg-dark mx-auto w-75")
                h1(class="card-header bg-dark") Upload Files
                div(class="card-body")
                    form(method="POST" action="/upload" class="dropzone dz-clickable" id="file-upload")