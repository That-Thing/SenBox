doctype html 
html
    head
        include include/head.pug
        link(href="/styles/home.css" rel="stylesheet" type="text/css")
        script(src="/js/settings.js")
        title Settings
    body(class=theme)
        include include/nav.pug
        div(class="container")
            div(class="row")   
                if user.discord_id
                    div(class="col-lg-6 mb-4 w-25" id="discord")
                        div(class=bg + "card mt-5 mx-auto w-75")
                            h5(class=bg + "card-header") Discord
                            div(class="card-body p-2")
                                div(class="text-center")
                                    img(class="img-thumbnail rounded-circle avatar w-50" src="https://cdn.discordapp.com/avatars/"+user.discord_id+"/"+user.discord_avatar alt=user.discord_username)
                                    h5(class="mt-1 mb-auto") 
                                        span #{user.discord_username.split("#")[0]}
                                        span(class="text-muted") ##{user.discord_username.split("#")[1]}
                div(class="col-lg-6 mb-4 w-75")
                    div(class=bg + "card mt-5 mx-auto w-100 p-2")
                        h5(class=bg + "card-header") Settings
                        h4 Authentication
                        span(class="d-flex")
                            input(class="form-control form-control-sm mt-1 ms-1 w-25" type="password" placeholder="Current password" name="current-password" id='current-password')
                        span(class="d-flex")
                            input(class="form-control form-control-sm mt-1 ms-1 w-25" type="password" placeholder="New password" name="new-password" id='new-password')
                        span(class="d-flex")
                            input(class="form-control form-control-sm mt-1 ms-1 w-25" type="password" placeholder="Repeat password" name="repeat-password" id='repeat-password')
                        button(class="btn btn-sm btn-primary ms-1 w-25 mt-2" id="change-password") Change password
                        h5(class="mt-2") Discord
                        if user.discord_id
                            input(type='hidden' name='discord-link' id="discord-link" value="https://discord.com/api/oauth2/authorize?client_id="+config.discord.discord_client_id+"&redirect_uri="+redirect+"&response_type=code&scope=identify")
                            button(class="btn btn-sm btn-danger ms-1 w-25 mt-2" id="unlink-discord")
                                i(class="fa-brands fa-discord me-2")
                                | Unlink Discord 
                        else
                            a(class="btn btn-sm btn-primary ms-1 w-25 mt-2" href="https://discord.com/api/oauth2/authorize?client_id="+config.discord.discord_client_id+"&redirect_uri="+redirect+"&response_type=code&scope=identify" target="_blank" id="link-discord")
                                i(class="fa-brands fa-discord me-2")
                                | Link Discord
                        h4(class="mt-2") User settings
                        span(class="d-flex") 
                            p(class="mt-auto mb-auto") E-mail
                            input(class="form-control form-control-sm mt-1 ms-1 w-25" type="text" placeholder="email@example.com" name="email" id='email' value=user.email)
                        button(class="btn btn-sm btn-primary mt-3 ms-auto me-auto w-50" id="save-settings") Save
        include include/footer.pug