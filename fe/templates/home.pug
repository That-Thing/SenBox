doctype html 
html
    head 
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width", initial-scale="1")
        script(src="https://kit.fontawesome.com/8030caa762.js" crossorigin="anonymous")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        link(href="styles/home.css" rel="stylesheet" type="text/css")
        link(href="styles/global.css" rel="stylesheet" type="text/css")
        script(src="https://unpkg.com/dropzone@6.0.0-beta.1/dist/dropzone-min.js")
        link(href="https://unpkg.com/dropzone@6.0.0-beta.1/dist/dropzone.css" rel="stylesheet" type="text/css")
        title #{config['settings']['name']}
        unless session.toast == false
            script(src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous")
            script(src="js/toast/jquery.toast.min.js")
            link(href="js/toast/jquery.toast.min.css" rel="stylesheet")
    - var theme = 'theme-' + session.theme
    body(class=theme)
        nav(class="navbar navbar-expand-lg navbar-dark bg-dark px-2")
            a(href="/home" class="navbar-brand") #{config['settings']['name']}  
            ul(class="navbar-nav")
                li(class="nav-item")
                    a(class="nav-link active" href="/home") Home 
                li(class="nav-item")
                    a(class="nav-link" href="/upload") Upload
                li(class="nav-item")
                    a(class="nav-link" href="/gallery") Gallery
                li(class="nav-item")
                    a(class="nav-link" href="/account") Account
                li(class="nav-item")
                    a(class="nav-link" href="/settings") Settings
            ul(class="navbar-nav ms-auto")
                li(class="nav-item")
                    a(class="nav-link" href="/api/theme")
                        if session.theme == 'dark'
                            i(class="fas fa-sun")
                        else
                            i(class="fas fa-moon")
                li(class="nav-item")
                    a(class="nav-link" href="/logout") Sign out
        div(class="container")
            div(class="card bg-dark w-75 mx-auto mt-5")
                h5(class="card-header") Welcome, 
                    - var groupClass = "usergroup-" + session.group;
                    span(class=groupClass) #{session.username}
                div(class="card-body")
                    div(class="progress")
                        div(class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 40%" aria-valuenow="2000" aria-valuemin="0" aria-valuemax="5000")
                    p(class="text-center text-muted") Storage used 2000/5000mb
                    p Total files on site: 99999
                    p Invites: 
                        a(href="/invites" class="text-decoration-none") 5
            div(class="card bg-dark w-75 mx-auto mt-5")
                h5(class="card-header") Latest Uploads 
                div(class="uploaded-content m-3")
                    img(src="https://cdn.sen.cat/cat/670.jpg" height="300")

        footer(class="position-absolute w-100 bottom-0 bg-dark text-center text-lg-start")
            div(class="text-center p-3")
                .
                    Copyright 2022 
                a(href="/" class="text-bold text-decoration-none") #{config['settings']['name']}
        unless session.toast == false
            script.
                $.toast({text: "#{session.toast[1]}", loader: false, bgColor:"#{session.toast[0]}"})    
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")